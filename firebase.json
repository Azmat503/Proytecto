{
  "hosting": {
    "public": "build/web",
    "rewrites": [
      {
        "source": "/admin/**",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}